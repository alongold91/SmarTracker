{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@common/*": ["../common/*"]
    }
  },
  "include": ["src/**/*"]
}